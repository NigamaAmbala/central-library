<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idUserloginDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="User Login Credentials"
    >
        <beginButton>
            <Button
                id="idUserLogincredentialsButton"
                text="UserLogin"
                press="onUserLoginCredentials"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idUserCancelButton"
                text="Cancel"
                press="onCloseUserDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBookDetailsForm1"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idUsernameLable1"
                    text="User Name"
                />
                <Input
                    id="idusernameInput1"
                    value=""
                    placeholder="Enter UserName"
                />
                <Label
                    id="idPasswordLabel1"
                    text="Password"
                />
                <Input
                    id="idPasswordInput1"
                    value=""
                    placeholder="Enter Password"
                    type="Password"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>