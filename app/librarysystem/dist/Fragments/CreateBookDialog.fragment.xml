<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Book"
    >
        <beginButton>
            <Button
                id="idCreateButton"
                text="Create"
                press="onCreateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idbookIdLabel12"
                    text="Book_Id"
                />
                <Input
                    id="idBookidInput12"
                    value="{localModel>/ID}"
                />
                <Label
                    id="idtitleLabel12" 
                    text="title"
                />
                <Input
                    id="idtitleInput12"
                    value="{localModel>/title}"
                />
                <Label
                    id="idauthorLabel12"
                    text="author"
                />
                <Input
                    id="idauthorInput12"
                    value="{localModel>/author}"
                />
                <Label
                    id="idISBNLabel12"
                    text="ISBN"
                />
                <Input
                    id="idISBNInput12"
                    value="{localModel>/ISBN}"
                />
                <Label
                    id="idgenreLabel12" 
                    text="genre"
                />
                <Input
                    id="idgenreInput12"
                    value="{localModel>/genre}"
                />
                <Label
                    id="idstockLabel12"
                    text="stock"
                />
                <Input
                    id="idstockInput12"
                    value="{localModel>/stock}"
                />
                <Label
                    id="idlanguageLabel12"
                    text="language"
                />
                <Input
                    id="idlanguageInput12"
                    value="{localModel>/language}"  
                />

            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>