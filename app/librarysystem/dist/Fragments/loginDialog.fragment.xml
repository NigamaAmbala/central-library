<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idloginDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Login credentials"
    >
        <beginButton>
            <Button
                id="idLogincredentialsButton"
                text="Login"
                press="onLoginCredentials"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBooks1DetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idUsernameLable"
                    text="UserName"
                />
                <Input
                    id="idusernameInput"
                    value=""
                    placeholder="Enter UserName"
                />
                <Label
                    id="idPasswordLabel"
                    text="Password"
                />
                <Input
                    id="idPasswordInput"
                    value=""
                    placeholder="Enter Password"
                    type="Password"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>